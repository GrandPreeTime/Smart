<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".sms_email">

    <ImageButton
        android:id="@+id/button3"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/little_grey_button"
        android:src="@drawable/strelka_back"
        android:textSize="30sp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
         />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/relative1"
        android:text="Введите код из E-mail"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="20sp"
        />

    <RelativeLayout
        android:id="@+id/relative1"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_width="250dp"
        android:layout_height="70dp"
        android:layout_marginTop="20dp">

        <EditText
            android:id="@+id/firstNum"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/little_grey_button"
            android:ems="10"
            android:inputType="number"
            android:textAlignment="center"
            />

        <EditText
            android:id="@+id/secondNum"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_toRightOf="@id/firstNum"
            android:layout_marginRight="15dp"
            android:background="@drawable/little_grey_button"
            android:ems="10"
            android:inputType="number"
            android:textAlignment="center"
            />

        <EditText
            android:id="@+id/thirdNum"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginRight="15dp"
            android:layout_toRightOf="@id/secondNum"
            android:background="@drawable/little_grey_button"
            android:ems="10"
            android:inputType="number"
            android:textAlignment="center"
            />

        <EditText
            android:id="@+id/fourthNum"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_toRightOf="@id/thirdNum"
            android:background="@drawable/little_grey_button"
            android:ems="10"
            android:inputType="number"
            android:textAlignment="center"
            />
    </RelativeLayout>

    <TextView
        android:id="@+id/infoTimer"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/relative1"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:text="Отправить код повторно можно
        будет через      секунд"
        android:onClick="onClick"
        android:textAlignment="center"/>

    <TextView
        android:id="@+id/timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="473dp"
        android:layout_marginLeft="214dp"
        android:text="59" />

</RelativeLayout>