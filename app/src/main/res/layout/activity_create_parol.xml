<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rellayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".create_parol">

    <Button
        android:id="@+id/skipPas"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:textColor="#1A6FEE"
        android:layout_alignParentRight="true"
        android:onClick="onClick"
        android:text="Пропустить"
        android:textSize="16sp"
        android:textAllCaps="false"
        android:background="@android:color/transparent"/>

    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="25sp"
        android:layout_marginTop="30dp"
        android:layout_below="@id/skipPas"
        android:text="Создайте пароль" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView15"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="Для защиты ваших персональных данных" />

    <RelativeLayout
        android:id="@+id/relative1"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_below="@id/textView16"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/btn_1st"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginRight="5dp"
            app:srcCompat="@drawable/white_tochka_parol" />

        <ImageView
            android:id="@+id/btn_2nd"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginRight="5dp"
            android:layout_toRightOf="@id/btn_1st"
            app:srcCompat="@drawable/white_tochka_parol" />

        <ImageView
            android:id="@+id/btn_3rd"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginRight="5dp"
            android:layout_toRightOf="@id/btn_2nd"
            app:srcCompat="@drawable/white_tochka_parol" />

        <ImageView
            android:id="@+id/btn_4th"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_toRightOf="@id/btn_3rd"
            app:srcCompat="@drawable/white_tochka_parol" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_below="@+id/relative1"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:gravity="center">

        <Button
            android:id="@+id/rb1"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/oval_parol"
            android:text="1"
            android:layout_marginRight="20dp"
            android:textSize="25sp"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/rb2"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/oval_parol"
            android:layout_toRightOf="@id/rb1"
            android:text="2"
            android:layout_marginRight="20dp"
            android:textSize="25sp"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/rb3"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/oval_parol"
            android:layout_toRightOf="@id/rb2"
            android:text="3"
            android:layout_marginRight="20dp"
            android:textSize="25sp"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/rb4"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/oval_parol"
            android:layout_below="@id/rb1"
            android:text="4"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:textSize="25sp"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/rb5"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/oval_parol"
            android:layout_below="@id/rb2"
            android:layout_toRightOf="@id/rb4"
            android:text="5"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:textSize="25sp"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/rb6"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/oval_parol"
            android:layout_below="@id/rb3"
            android:layout_toRightOf="@id/rb5"
            android:text="6"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:textSize="25sp"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/rb7"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/oval_parol"
            android:layout_below="@id/rb4"
            android:text="7"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:textSize="25sp"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/rb8"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/oval_parol"
            android:layout_below="@id/rb5"
            android:layout_toRightOf="@id/rb4"
            android:text="8"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:textSize="25sp"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/rb9"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/oval_parol"
            android:layout_below="@id/rb6"
            android:layout_toRightOf="@id/rb8"
            android:text="9"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:textSize="25sp"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/rb0"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/oval_parol"
            android:layout_below="@id/rb8"
            android:layout_toRightOf="@id/rb7"
            android:text="0"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:textSize="25sp"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/clear_btn"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_toRightOf="@id/rb0"
            android:layout_below="@id/rb9"
            android:background="@drawable/cut"
            android:layout_marginTop="45dp"
            android:layout_marginLeft="10dp"/>
    </RelativeLayout>

</RelativeLayout>