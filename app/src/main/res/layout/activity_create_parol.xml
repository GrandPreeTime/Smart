<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".create_parol">

    <TextView
        android:id="@+id/textView14"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:textColor="#1A6FEE"
        android:text="Пропустить" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="25sp"
        android:layout_marginTop="30dp"
        android:layout_below="@id/textView14"
        android:text="Создайте пароль" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView15"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="Для защиты ваших персональных данных" />

    <RelativeLayout
        android:id="@+id/relative1"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_below="@id/textView16"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginRight="5dp"
            app:srcCompat="@drawable/blue_tochka_parol" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginRight="5dp"
            android:layout_toRightOf="@id/imageView6"
            app:srcCompat="@drawable/white_tochka_parol" />

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginRight="5dp"
            android:layout_toRightOf="@id/imageView5"
            app:srcCompat="@drawable/white_tochka_parol" />

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_toRightOf="@id/imageView7"
            app:srcCompat="@drawable/white_tochka_parol" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_below="@+id/relative1"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:gravity="center">

        <Button
            android:id="@+id/button4"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/oval_parol"
            android:text="1"
            android:layout_marginRight="20dp"
            android:textSize="25sp"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/button5"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/oval_parol"
            android:layout_toRightOf="@id/button4"
            android:text="2"
            android:layout_marginRight="20dp"
            android:textSize="25sp"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/button6"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/oval_parol"
            android:layout_toRightOf="@id/button5"
            android:text="3"
            android:layout_marginRight="20dp"
            android:textSize="25sp"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/button7"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/oval_parol"
            android:layout_below="@id/button4"
            android:text="4"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:textSize="25sp"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/button8"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/oval_parol"
            android:layout_below="@id/button5"
            android:layout_toRightOf="@id/button7"
            android:text="5"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:textSize="25sp"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/button9"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/oval_parol"
            android:layout_below="@id/button6"
            android:layout_toRightOf="@id/button8"
            android:text="6"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:textSize="25sp"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/button10"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/oval_parol"
            android:layout_below="@id/button7"
            android:text="7"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:textSize="25sp"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/button11"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/oval_parol"
            android:layout_below="@id/button8"
            android:layout_toRightOf="@id/button7"
            android:text="8"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:textSize="25sp"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/button12"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/oval_parol"
            android:layout_below="@id/button9"
            android:layout_toRightOf="@id/button11"
            android:text="9"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:textSize="25sp"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/button13"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/oval_parol"
            android:layout_below="@id/button11"
            android:layout_toRightOf="@id/button10"
            android:text="0"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:textSize="25sp"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/button14"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_toRightOf="@id/button13"
            android:layout_below="@id/button12"
            android:background="@drawable/cut"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="10dp"/>
    </RelativeLayout>

</RelativeLayout>